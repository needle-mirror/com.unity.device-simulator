.unity-device-simulator__toolbar {
    min-width: 300px;
    min-height: 20px;
}

.unity-device-simulator__control-panel {
    flex-direction: column;
    min-height: 200px;
    padding: 3px;
    padding-left:0px;
    padding-right:0px;
    font-size: 10px;
}

.unity-device-simulator__control-panel_foldout {
    border-bottom-width: 1px;
    padding-top: 2px;
    padding-bottom: 2px;
}

.unity-device-simulator__control-panel-label {
    margin-bottom: 3px;
}

.unity-device-simulator__screen-resolution-field {
    width: 35px;
}

.unity-device-simulator__screen-toggle, .unity-device-simulator__orientation {
    margin-left: 0px;
    margin-bottom: 1px;
}

.unity-device-simulator__orientation {
    width: 215px;
}

.unity-device-simulator__screen-toggle > Label, .unity-device-simulator__orientation > Label {
    min-width: 80px;
    width: 80px;
}

.unity-device-simulator__allowed-orientations {
    margin-left: 13px;
}

.unity-device-simulator__allowed-orientations > #unity-content {
    margin-left: 0px;
}

.unity-device-simulator__preview-panel-toolbar {
    height: 22px;
    min-height: 22px;
    min-width: 700px;
    align-items: center;
}

.unity-device-simulator__scale-value-label {
    width: 25px;
    margin-right: 5px;
}

.unity-device-simulator__scale-slider
{
    margin-bottom: 5px;
    width: 100px;
}

.unity-device-simulator__scale-label, .unity-device-simulator__scale-manipulate-label {
    border-left-width: 0px;
    border-right-width: 0px;
}

.unity-device-simulator__scale-manipulate-label {
    border-left-width: 0px;
}

.unity-device-simulator__rotate-label {
    margin-left: 3px;
    margin-top: 1px
}

.unity-device-simulator__rotate-image-container {
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    padding: 0px;
    border-width: 0px;
}

.unity-device-simulator__rotate-cw-image, .unity-device-simulator__rotate-ccw-image {
    margin-left: 3px;
    margin-bottom : 2px;
    width: 16px;
    height: 16px;
}

.unity-device-simulator__rotate-ccw-image {
    margin-right: 3px;
}

.unity-device-simulator__inactive-msg-container {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 21px;
    padding-left: 10px;
    margin-left: 2px;
    margin-right: 2px;
    margin-bottom: 2px;
    background-color: rgb(246, 178, 107);
}

.unity-device-simulator__scrollview-container, .unity-device-simulator__preview-scrollview {
    flex-grow: 1;
}

.unity-device-simulator__preview-scrollview > #unity-content-viewport > #unity-content-container {
    align-self: center;
}

.unity-device-simulator__preview-container {
    align-items: center;
}
